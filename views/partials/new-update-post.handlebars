<div class="card text-dark bg-light m-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>{{this}} Post</h4>
    </div>

    <div class="card-body">
        <div class="px-4 py-3">
            <div class="mb-3">
                <label for="post-title" class="form-label">Title</label>
                <input type="text" class="form-control" id="post-title" placeholder="Title">
            </div>
            <div class="mb-3">
                <label for="post-body" class="form-label">Post</label>
                <textarea class="form-control" id="post-body" placeholder="Post"></textarea> 
            </div>
            <button type="click" class="btn btn-primary">{{this}}</button>
        </div>
    </div>

</div>